extends ../layout/base.pug
block link
    link(rel="stylesheet" type="text/css" href="slick/slick.css")
    link(rel="stylesheet" type="text/css" href="slick/slick-theme.css")

block content
    main.main-block
        .body-block
            h1.slider-headline Фотографии
            .slider
                    img(src="img/slider/slide1.png" class="slide-single" alt="")
                    img(src="img/slider/slide2.png" class="slide-single" alt="")
                    img(src="img/slider/slide3.png" class="slide-single" alt="")
                    img(src="img/slider/slide4.png" class="slide-single" alt="")
                    img(src="img/slider/slide5.png" class="slide-single" alt="")
                    img(src="img/slider/slide6.png" class="slide-single" alt="")
                    img(src="img/slider/slide7.png" class="slide-single" alt="")
                    img(src="img/slider/slide8.png" class="slide-single" alt="")
                    img(src="img/slider/slide9.png" class="slide-single" alt="")
                    img(src="img/slider/slide10.png" class="slide-single" alt="")
                    img(src="img/slider/slide11.png" class="slide-single" alt="")
                    img(src="img/slider/slide12.png" class="slide-single" alt="")
